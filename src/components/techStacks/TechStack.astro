---
import type { TechnicalSkill } from "../../gql/request";
interface Props {
	techStack: TechnicalSkill;
}

const { techStack } = Astro.props;
---

<div>
    <h3>{ techStack.category }</h3>
    <ul>
        { techStack.stacks.map(stack => <li>{ stack }</li>) }
    </ul>
</div>

<style>
    div {
        width: 100%;
        height: 100%;
        text-align: center;
        border-color: black;
        border-style: solid;
        border-width: 1px;
        border-radius: 0 0 10% 10%;
        box-shadow: 1px 1px 4px #000000;
        overflow: hidden;
    }

    h3 {
        margin: 0 auto;
        border-bottom-color: black;
        border-bottom-style: solid;
        border-bottom-width: 1px;
        background-color: rgba(163, 145, 215, 0.42);
    }

    ul {
        padding: 0;
    }

    li {
        list-style: none;
    }

    :global(.dark) h3 {
        background-color: rgba(107, 64, 225, 0.79);
        border-color: white;
    }

    :global(.dark) div {
        border-color: white;
        box-shadow: 1px 1px 4px #000000;
    }
</style>
