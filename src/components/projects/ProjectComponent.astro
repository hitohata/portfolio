---
import type { Project } from "../../gql/request";
import TagWrapperLayout from "../../layouts/TagWrapperLayout.astro";
interface Props {
	project: Project;
}
const { project } = Astro.props;
---

<TagWrapperLayout tag="Project" suffix={project.projectTitle}>
    <p class="project-title">{project.projectTitle}</p>
    <div class="detail">
        <div>
            {project.details.map(detail => <p>{detail}</p>)}
        </div>
        <div class="links">
            { project.links.map(link => <a href={link.url}>{link.title}</a>) }
        </div>
        <div class="skill-stacks">
            { project.techStacks.map(stack => <p>{stack}</p>) }
        </div>
    </div>
</TagWrapperLayout>

<style>
    .project-title {
        font-weight: bold;
    }

    .detail {
        margin-left: 20px;
    }

    .links a {
        padding-right: 20px;
    }

    .skill-stacks {
        display: flex;
    }
    .skill-stacks p {
        padding-right: 10px;
        font-size: 16px;
        border-radius: 25%;
    }
</style>
