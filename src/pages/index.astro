---
import Layout from '../layouts/Layout.astro';
import TagWrapperLayout from "../layouts/TagWrapperLayout.astro";
import Header from "../components/Header.astro";
import Overview from "../components/Overview.astro"
---

<Layout>
	<!--<AppBarLayout>-->
		<main>
			<TagWrapperLayout tag="Breaf Introduction">
				<Header />
			</TagWrapperLayout>
			<TagWrapperLayout tag="Overview">
				<Overview />
			</TagWrapperLayout>
		</main>
	<!--</AppBarLayout>-->
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 900px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
</style>
